{% extends 'AppBundle::base.html.twig' %}

{% block body -%}
    <h1>Factura list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fechaemision</th>
                <th>Fechavencimiento</th>
                <th>Concepto</th>
                <th>comprobante</th>
                <th>Codigoautorizacionelectronico</th>
                <th>Puntoventa</th>
                <th>Numerocomprobante</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}

            <tr>
                <td><a href="{{ path('factura_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.fechaEmision %}{{ entity.fechaEmision|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaVencimiento %}{{ entity.fechaVencimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.conceptoTipo %}{{ entity.conceptoTipo.nombre }}{% endif %}</td>
                <td>{% if entity.comprobanteTipo %}{{ entity.comprobanteTipo.nombre }}{% endif %}</td>
                <td>{{ entity.codigoAutorizacionElectronico }}</td>
                <td>{{ entity.puntoVenta.numero }}</td>
                <td>{{ entity.numeroComprobante.numero }}</td>
                <td>{{ entity.total }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('factura_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('factura_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('factura_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
